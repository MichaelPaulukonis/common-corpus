{
    "rules": {
        "indent": [
            2,
            2,
            {"VariableDeclarator": 2}
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "linebreak-style": [
            2,
            "windows"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended"
}